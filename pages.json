			"list": [{
				"pagePath": "pages/index/index",
				"iconPath": "static/iconfont/首页.png",
				"selectedIconPath": "static/iconfont/首页 (1).png",
				"text": "主页"
			}, {
				"pagePath": "pages/my/my",
				"iconPath": "static/iconfont/我的.png",
				"selectedIconPath": "static/iconfont/我的 (1).png",
				"text": "我的"
			}]
	},
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "uni-app",
		"navigationBarBackgroundColor": "#ccc",
		"backgroundColor": "#ccc"
	},
	"uniIdRouter": {}
}
