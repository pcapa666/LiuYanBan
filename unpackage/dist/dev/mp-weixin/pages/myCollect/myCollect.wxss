.fixed-btn {
  position: fixed;
  top: 100px;
  right: 25px;
  width: 60px;
  height: 60px;
  line-height: 60px;
  text-align: center;
  background-color: #42b983;
  color: #fff;
  font-size: 30px;
  border-radius: 30px;
  cursor: pointer;
  box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.2);
}
.fixed-btn:active {
  box-shadow: none;
  transform: translateY(2rpx);
  background-color: #3ba773;
}
.myMessage {
  overflow-y: auto;
}
.myMessage .none {
  display: flex;
  justify-content: center;
  margin-top: 120rpx;
}
.myMessage .message {
  display: flex;
  flex-direction: column;
  box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.2);
  background-color: #fff;
  border-radius: 20px;
  padding: 20px;
  margin: 30px 20px;
}
.myMessage .message:active {
  background-color: #fafafa;
}
.myMessage .message .message-header {
  display: flex;
  align-items: center;
  margin-bottom: 10px;
  position: relative;
}
.myMessage .message .message-header .more {
  position: absolute;
  right: 0rpx;
  top: 15rpx;
  font-size: 50rpx;
}
.myMessage .message .avatar {
  border-radius: 50%;
  width: 50px;
  height: 50px;
  margin-right: 20px;
}
.myMessage .message .nickname {
  font-size: 20px;
  font-weight: bold;
  margin-bottom: 5px;
}
.myMessage .message .message-body {
  margin-top: 10px;
}
.myMessage .message .message-body .onGood {
  color: red;
}
.myMessage .message .message-body .onCollect {
  color: #FFA500;
}
.myMessage .message .message-text {
  font-size: 18px;
  line-height: 1.5;
  margin-top: 5px;
  margin-left: 5px;
}
.myMessage .message .message-time {
  font-size: 14px;
  color: #666;
  margin-top: 30px;
  float: left;
}
.myMessage .message .message-right {
  color: #666;
  margin-top: 30px;
  float: right;
  font-size: 20px;
  margin-left: 25px;
}
.myMessage .message .message-right .right-text {
  font-size: 14px;
  margin-left: 5px;
}
