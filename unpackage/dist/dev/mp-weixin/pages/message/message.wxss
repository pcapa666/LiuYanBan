.all {
  overflow-y: auto;
  height: calc(100vh - 63px);
}
.all .message {
  display: flex;
  flex-direction: column;
  background-color: #fff;
  padding: 40rpx 40rpx;
}
.all .message .message-header {
  display: flex;
  align-items: center;
  margin-bottom: 10px;
  position: relative;
}
.all .message .message-header .more {
  position: absolute;
  right: 0rpx;
  top: 15rpx;
  font-size: 50rpx;
}
.all .message .message-header .avatar {
  border-radius: 50%;
  width: 50px;
  height: 50px;
  margin-right: 20px;
}
.all .message .message-header .nickname {
  font-size: 20px;
  font-weight: bold;
  margin-bottom: 5px;
}
.all .message .message-body {
  margin-top: 10px;
}
.all .message .message-body .onGood {
  color: red  !important;
}
.all .message .message-body .onCollect {
  color: #FFA500 !important;
}
.all .message .message-body .message-text {
  font-size: 18px;
  line-height: 1.5;
  margin-top: 5px;
  margin-left: 5px;
}
.all .message .message-body .message-time {
  font-size: 14px;
  color: #666;
  margin-top: 30px;
  float: left;
}
.all .message .message-body .message-right {
  color: #666;
  margin-top: 30px;
  float: right;
  font-size: 20px;
  margin-left: 25px;
}
.all .message .message-body .message-right .right-text {
  font-size: 14px;
  margin-left: 5px;
}
.all .color {
  background-color: #e5e5e5;
  height: 20rpx;
  width: 100%;
}
.all .comment .comment-header {
  background-color: #fff;
  padding: 20rpx 25rpx;
  position: relative;
  font-size: 25rpx;
  margin: auto;
}
.all .comment .comment-header .color {
  position: absolute;
  background-color: #42b983;
  width: 10rpx;
  height: 45rpx;
  border-radius: 5rpx;
  left: -5rpx;
  top: auto;
}
.all .comment .comment-body {
  display: flex;
  flex-direction: column;
  background-color: #fff;
  padding: 0rpx 40rpx;
}
.all .comment .comment-body .noComment {
  justify-content: center;
  display: flex;
  margin-top: 80rpx;
}
.all .comment .comment-body .box {
  border-bottom: 1rpx solid #eee;
}
.all .comment .comment-body .box .box-header {
  margin-top: 30rpx;
  display: flex;
  align-items: center;
  margin-bottom: 10px;
  position: relative;
}
.all .comment .comment-body .box .box-header .more {
  position: absolute;
  right: 0rpx;
  top: 15rpx;
  font-size: 40rpx;
}
.all .comment .comment-body .box .box-header .avatar {
  border-radius: 50%;
  width: 40px;
  height: 40px;
  margin-right: 18px;
}
.all .comment .comment-body .box .box-header .nickname {
  font-size: 15px;
  font-weight: bold;
  margin-bottom: 5px;
}
.all .comment .comment-body .box .box-body {
  margin-top: 10px;
}
.all .comment .comment-body .box .box-body .box-text {
  font-size: 18px;
  line-height: 1.5;
  margin-top: 5px;
  margin-left: 55px;
}
.all .comment .comment-body .box .box-body .box-time {
  font-size: 14px;
  color: #666;
  margin-top: 20px;
  float: left;
  margin-bottom: 30rpx;
}
.all .comment .comment-body .box .box-body .box-right {
  color: #666;
  margin-top: 30px;
  float: right;
  font-size: 20px;
  margin-left: 25px;
}
.all .comment .comment-body .box .box-body .box-right .right-text {
  font-size: 14px;
  margin-left: 5px;
}
.all .input-box {
  display: flex;
  align-items: center;
  background-color: #ccc;
  padding: 15px;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  font-size: 15px;
}
.all .input-box .input {
  flex: 1;
  height: 30px;
  border: none;
  outline: none;
  padding: 2px 10px;
  background-color: #fff;
  border-radius: 5px;
}
.all .input-box .send-button {
  font-size: 15px;
  margin-left: 10px;
  height: 30px;
  line-height: 30px;
  padding: 0 20px;
  border: none;
  outline: none;
  background-color: #42b983;
  color: #fff;
  border-radius: 5px;
}
.all .input-box .send-button:active {
  box-shadow: none;
  background-color: #3ba773;
}
